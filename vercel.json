{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd .. && npm run build:server",
  "installCommand": "npm install",
  "outputDirectory": "client/dist",
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}